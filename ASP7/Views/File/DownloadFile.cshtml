@{
    ViewData["Title"] = "ЛР 7";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 50px;
        }
        .form-card {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 15px 0px rgba(0, 0, 0, 0.1);
        }
        .form-card h2 {
            margin-bottom: 30px;
            text-align: center;
        }
        .form-control {
            border-radius: 5px;
        }
        .btn-primary {
            border-radius: 5px;
            width: 100%;
        }
        .text-muted {
            font-size: 12px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-card">
                    <h2>Заповніть наступну інформацію:</h2>
                    <form method="post">
                        <div class="form-group">
                            <label for="name">Введіть ваше ім‘я</label>
                            <input class="form-control" type="text" id="name" name="name" required>
                        </div>
                        <div class="form-group">
                            <label for="surname">Введіть ваше прізвище</label>
                            <input class="form-control" type="text" id="surname" name="surname" required>
                        </div>
                        <div class="form-group">
                            <label for="filename">Введіть назву для файлу</label>
                            <input class="form-control" type="text" id="filename" name="filename" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Завантажити файл</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
